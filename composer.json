{
  "name": "ph-7/minimalist-sales-site",
  "description": "A minimalist sales micro-site",
  "homepage": "https://pierrehenry.be",
  "type": "project",
  "require": {
    "php": ">=8.0.0",
    "vlucas/phpdotenv": "^5.4",
    "mustache/mustache": "^2.14",
    "twbs/bootstrap": "5.1",
    "ph-7/just-http-status-codes": "^1.1"
  },
  "require-dev": {
    "filp/whoops": "^2.14",
    "phpunit/phpunit": "^9.5"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "post-cmd": [
      "cp -Rf vendor/twbs/bootstrap/dist/* assets/bootstrap"
    ],
    "post-install-cmd": ["composer run-script post-cmd"],
    "post-update-cmd": ["composer run-script post-install-cmd"]
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "PHenry\\App\\": "app"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PHenry\\Tests\\Unit\\App\\": "tests/unit"
    }
  },
  "authors": [
    {
      "name": "Pierre-Henry Soria",
      "email": "hi@ph7.me",
      "homepage": "https://ph7.me"
    }
  ],
  "minimum-stability": "stable"
}
